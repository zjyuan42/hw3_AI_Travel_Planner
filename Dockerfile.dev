# 开发环境Dockerfile
FROM node:18-alpine

WORKDIR /app

# 安装系统依赖
RUN apk add --no-cache \
    curl \
    git \
    python3 \
    make \
    g++

# 复制package文件
COPY package*.json ./
COPY frontend/package*.json ./frontend/
COPY backend/package*.json ./backend/

# 安装根目录依赖
RUN npm install

# 安装前端依赖
RUN cd frontend && npm install

# 安装后端依赖  
RUN cd backend && npm install

# 复制源代码
COPY . .

# 创建日志目录
RUN mkdir -p logs

# 暴露端口
EXPOSE 3000 5000

# 启动开发服务器
CMD ["npm", "run", "dev"]